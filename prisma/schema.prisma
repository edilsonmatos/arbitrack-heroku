generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SpreadHistory {
  id           String   @id @default(uuid())
  symbol       String
  exchangeBuy  String
  exchangeSell String
  direction    String
  spread       Float
  timestamp    DateTime @default(now())
  spotPrice    Float?
  futuresPrice Float?

  @@index([symbol, timestamp])
  @@map("spread_history")
} 