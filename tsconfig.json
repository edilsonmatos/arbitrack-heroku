{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "lib": ["es2018", "esnext.asynciterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["./src/*"],
      "@scripts/*": ["./scripts/*"]
    },
    "downlevelIteration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "test-*.ts"
  ],
  "exclude": ["node_modules"]
}
